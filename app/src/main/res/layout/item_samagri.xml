<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/samImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/samName"
            android:layout_below="@id/samImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samagri Item"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/samQuantity"
            android:layout_below="@id/samName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity 1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/samPrice"
            android:layout_below="@id/samQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹999"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Button
            android:id="@+id/samAddBtn"
            android:layout_alignParentEnd="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="+"
            android:textSize="16sp"
            android:backgroundTint="#FF9800" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
