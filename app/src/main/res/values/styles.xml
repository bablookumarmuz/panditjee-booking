<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for TextInputLayout (Material Design) -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="hintTextColor">#888888</item> <!-- ✅ No 'android:' -->
        <item name="boxStrokeColor">#FFA726</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Style for EditText (AppCompat) -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="hintTextColor">#888888</item> <!-- ✅ 'android:' is required here -->
        <item name="android:padding">12dp</item>
    </style>

</resources>
