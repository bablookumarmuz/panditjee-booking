<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/samagriCartHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Samagri Cart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/samagriCartRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/samagriCartTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: â‚¹0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/samagriCheckoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:backgroundTint="#A84300"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp" />

</LinearLayout>
